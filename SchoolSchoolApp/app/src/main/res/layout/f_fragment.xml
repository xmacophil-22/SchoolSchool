<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:paddingBottom="40dp"
        android:background="@drawable/mealbackground">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mealTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/garnish"
            app:layout_constraintTop_toBottomOf="@+id/supplement"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/main_dish"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:id="@+id/supplement"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_dish"
            app:layout_constraintTop_toBottomOf="@+id/mealTV"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/supplement"
            android:layout_marginTop="8dp" />

    <Space
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/garnish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>